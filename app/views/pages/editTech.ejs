<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>
<!-- Modal add technologies -->
<section class="mx-auto my-10">
    <div class="w-full lg:w-1/3  bg-gray-100 rounded-xl mx-auto" id="addTech">
      <% if(logueado) { %>
        <div class="py-2 border-b-2 border-blue-500">
          <h1 class="text-center font-semibold text-xl">Editar Tecnologia</h1>
        </div>
          <form action="/editTech/<%= tech.id %>" method="post" class="mx-6 mt-4">
            <div>
              <label class="block text-gray-700">Tecnologia</label>
              <input type="text" value="<%= tech.technology %>" name="technology" id="technology" placeholder="Ingresar tecnologia" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autofocus autocomplete>
            </div>
    
            <div class="mt-4">
              <label class="block text-gray-700">URL o Ruta de la imagen</label>
              <input type="text" value="<%= tech.icon %>" name="icon" id="icon" placeholder="Ingresar ruta" minlength="6" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
                    focus:bg-white focus:outline-none">
            </div>
            <div class="flex justify-around mb-4 my-6">
              <a href="/" id="addCloseTech" class="block bg-red-500 hover:bg-red-400 focus:bg-red-400 text-white font-semibold rounded-lg
                  px-6 py-3 my-3">Cancelar</a>
              <button type="submit" class="block bg-green-500 hover:bg-green-400 focus:bg-green-400 text-white font-semibold rounded-lg
                  px-6 py-3 my-3">Guardar</button>
            </div>
    
          </form>
          <% }else{ %>
            <div class="py-2 border-b-2 border-blue-500">
              <h1 class="text-center font-semibold text-xl">No tienes permisos para estar ac√°</h1>
            </div>
          <% } %>
      </div>

</section>
<%- include('../partials/footer.ejs') %>
<script>
    footerFixed = document.querySelector('footer');
    footerFixed.classList.add('sticky', 'top-[100vh]');
    //sticky top-[100vh]
</script>
</body>
</html>